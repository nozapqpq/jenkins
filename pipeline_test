pipeline {
    agent any
    stages {
        stage('Parallel') {
            parallel {
                stage('Branch A') {
                    steps {
                        echo "On Branch A"
                        script {
                            retry(5) {
                                sh "python3 hoge.py"
                            }
                        }
                    }
                }
                stage('Branch C') {
                    stages {
                        stage('Nested 1') {
                            steps {
                                echo "In stage Nested 1 within Branch C"
                            }
                        }
                        stage('Nested 2') {
                            steps {
                                echo "In stage Nested 2 within Branch C"
                                script {
                                    retry(5) {
                                        sh "python3 hoge.py"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
